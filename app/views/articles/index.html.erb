<h1>投稿一覧</h1>

<table>
  <tr>
    <th>投稿者名</th>
    <th>内容</th>
    <th>投稿日時</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.name %></td>
    <td><%= article.article %></td>
    <td><%= article.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></td>
    <td><%= link_to '編集', edit_article_path(article) %></td>
    <td><%= link_to '削除', article, method: :delete, data: { confirm: '削除しますか？' } %></td>
    <td><%= link_to 'Permalink', article %></td>

  </tr>
<% end %>
</table>

<br />

<h2>新規投稿</h2>
<%= render 'form', :article => @article %>
